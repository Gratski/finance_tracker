<table class="table table-striped">
  
  <thead>
    <tr>
      <td>Ticker</td>
      <td>Company</td>
      <td>Price</td>
      <td></td>
    </tr>
  </thead>

  <% stocks.each do |stock| %>
    <tr>
      <td><%= stock.ticker %></td>
      <td><%= stock.name %></td>
      <td><%= stock.last_price %></td>
      <td><%= link_to 'remove', user_stock_path(id: stock.id, user_id: @user.id, stock_id: stock.id), 
                                method: :delete,
                                class: "btn btn-xs btn-danger" %></td>
    </tr>
  <% end %>

</table>